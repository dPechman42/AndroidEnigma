<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- the input to be encrypted -->
    <EditText
        android:id="@+id/input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/edit_text_border"
        android:hint="@string/inputText"
        android:inputType="textMultiLine"
        android:maxWidth="@dimen/max_textbox_width"
        android:padding="@dimen/textbox_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- the output of the text you inputted -->
    <TextView
        android:id="@+id/output_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:maxWidth="@dimen/max_textbox_width"
        android:text="Show Output"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/input_text"
        app:layout_constraintStart_toStartOf="@id/input_text"
        app:layout_constraintTop_toTopOf="@+id/input_text" />

</merge>