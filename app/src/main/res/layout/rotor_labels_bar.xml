<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/main_rotors_bar">
    <!--
    Labels
    -->
    <TextView
        android:id="@+id/reflector_label"
        style="@style/RotorBarLabel"
        android:layout_marginTop="@dimen/machine_separate_components"
        android:text="R"
        app:layout_constraintEnd_toStartOf="@+id/rotor_3_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rotor_3_label"
        style="@style/RotorBarLabel"
        android:text="III"
        app:layout_constraintEnd_toStartOf="@+id/rotor_2_label"
        app:layout_constraintStart_toEndOf="@+id/reflector_label"
        app:layout_constraintTop_toTopOf="@+id/reflector_label" />

    <TextView
        android:id="@+id/rotor_2_label"
        style="@style/RotorBarLabel"
        android:text="II"
        app:layout_constraintEnd_toStartOf="@+id/rotor_1_label"
        app:layout_constraintStart_toEndOf="@+id/rotor_3_label"
        app:layout_constraintTop_toTopOf="@+id/reflector_label" />

    <TextView
        android:id="@+id/rotor_1_label"
        style="@style/RotorBarLabel"
        android:text="I"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rotor_2_label"
        app:layout_constraintTop_toTopOf="@+id/reflector_label" />
</merge>